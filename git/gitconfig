# Main gitconfig that includes all configuration files
# This file is symlinked to ~/.gitconfig by dotbot

# Global settings shared across all machines (tracked in dotfiles)
[include]
	path = ~/.gitconfig.global

# User identity (generated by setup-git-user.sh, not tracked)
[include]
	path = ~/.gitconfig.user

# Machine-specific overrides (not tracked)
[include]
	path = ~/.gitconfig.local
